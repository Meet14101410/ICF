    <script>
        function submitConsent() {
            const signatureInput = document.getElementById('signatureInput').value.trim();
            if (!signatureInput) {
                alert('Please type your full name to consent.');
                return;
            }

            // In a real eConsent system, this would gather more data and send to a secure backend
            const consentDate = new Date();
            document.getElementById('consentDate').value = consentDate.toISOString().slice(0, 10); // YYYY-MM-DD
            document.getElementById('consentTime').value = consentDate.toTimeString().slice(0, 8); // HH:MM:SS

            // Simulate capturing IP and browser info (requires backend or more complex JS)
            document.getElementById('ipAddress').value = '192.168.1.100 (Simulated)';
            document.getElementById('browserInfo').value = navigator.userAgent;

            alert('Consent submitted successfully for: ' + signatureInput + '\n(This is a demonstration only. Actual eConsent involves secure server-side processing.)');

            // Here, you would typically use fetch() or XMLHttpRequest to send this data to your backend
            /*
