                    participantSignature: signatureInput,
                    consentDate: document.getElementById('consentDate').value,
                    consentTime: document.getElementById('consentTime').value,
                    ipAddress: document.getElementById('ipAddress').value,
                    browserInfo: document.getElementById('browserInfo').value,
